<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Order Tracker</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    @using OrderTracker.Models;

    <h1>Vendor's orders</h1>

    <h2>@Model.VendorName</h2>
    <ul>
        @foreach (Order order in Order.GetAll().FindAll(o => o.VendorId == Model.Id))
        {
            <li>@order (@Html.ActionLink("Delete", "DeleteOrder", new { vendorId = order.VendorId, orderId = order.Id }))</li>
        }
    </ul>

    <a href="/orders/new/@Model.Id">Add another order</a>
    @Html.ActionLink("Delete All Orders", "DeleteVendorOrders", new { id = Model.Id });
    @*<a href='/orders/@Model.Id'>View all orders</a>*@
    @*<a href='/vendors/@Model.Id'>View all orders</a>*@
    <a href='/vendors'>Back to main page</a>


    @*<form action="/vendors/@Model.Id/delete" method="post">
            <button type="submit" name="button">Clear All Orders</button>
        </form>*@
</body>
</html>